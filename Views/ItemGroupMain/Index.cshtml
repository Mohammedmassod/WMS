@model IEnumerable<WMS.Models.ItemGroup>

@using WMS.Models
@{

    int rowCounter = 0;

    ViewData["Title"] = "مجموعة الأصناف الفرعية";
}



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="breadcrumb-wrapper py-3 mb-4"><span class="text-muted fw-light">الصفحة الرئيسية / </span> مجموعة الأصناف الرئيسية </h4>



    <!-- عرض التراخيص -->
    <!-- DataTable with Buttons -->
    <div class="card">
        <div class="card-datatable table-responsive pt-0">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                <div class="card-header flex-column flex-md-row">
                    <div class="head-label text-center">
                        <h5 class="card-title mb-0">عرض الأصناف</h5>
                    </div>
                    <div class="col-md-4 align-self-center ">
                        <div class="text-end mb-6 me-4 mt-4">
                            <button class="btn btn-label-primary"
                                    tabindex="0"
                                    aria-controls="DataTables_Table_0"
                                    type="button"
                                    data-bs-toggle="offcanvas"
                                    data-bs-target="#AddItemGropM">
                                <span>
                                    <i class="bx bx-plus me-0 me-lg-2"></i><span class="d-none d-lg-inline-block">إضافة مجموعة</span>
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1">

                        <label class="form-label" for="itemState"> عددالعرض</label>
                        <select name="DataTables_Table_0_length" aria-controls="DataTables_Table_0" class="form-select">
                            <option value="7">7</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="75">75</option>
                            <option value="100">100</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label" for="itemState"> بحث بحسب</label>
                        <select id="searchsele" name="search" class="form-select">
                            <option value=""> الكل </option>
                            <option value="3">اسم المجموعة  </option>
                            <option value="1">رقم المجموعة </option>
                        </select>

                    </div>
                    <div class="col-md-4">
                        <label class="form-label" for="search"> بحث </label>

                        <div id="DataTables_Table_0_filter" class="input-group input-group-merge dataTables_filter">
                            <span class="input-group-text" id="basic-addon-search31"><i class="bx bx-search"></i></span>
                            <input id="seaarchinput"
                                   type="search"
                                   class="form-control"
                                   placeholder="..."
                                   aria-label=""
                                   aria-controls="DataTables_Table_0" />
                        </div>
                    </div>

                </div>

                <!-- Scrollable -->
                <div class="card-datatable text-nowrap">
                    <table class="dt-scrollableTable table table-bordered">
                        <thead>
                            <tr>

                                <th>
                                    رقم المجموعة
                                </th>

                                <th>
                                    إسم المجموعة
                                </th>

                                <th>
                                    وصف المجموعة
                                </th>

                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(rowCounter += 1)
                                    </td>
                                    <td>@item.GroupName </td>
                                    <td>@item.Description</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                                <i class="icon-ellipsis-vertical-solid"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item me-1" asp-action="Edit" asp-route-id="@item.SectorId">
                                                    <i class="icon-pen-to-square-solid"></i>
                                                    تعديل
                                                </a>
                                                <a class="dropdown-item me-1" asp-action="Delete" asp-route-id="@item.SectorId" onclick='return confirm("هل أنت متأكد من عملية حذف الحقل المحدد؟")'>
                                                    <i class="icon-trash-can-solid"></i>
                                                    حذف
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                    @*
                                <td>
                                <div class="dropdown">
                                <button type="button" class="dropdown-item  " btn-label-linkedin @*btn-outline-linkedin
                                data-bs-toggle="offcanvas" data-bs-target="@(" #EditSector-" + item.SectorId)"
                                data-url="@Url.Action($" Edit/{item.SectorId}")">
                                <i class="bx bx-edit-alt me-1"></i>
                                تعديل
                                </button>

                                @await Html.PartialAsync("Edit", item)

                                <button class="dropdown-item   "
                                data-bs-toggle="offcanvas"
                                data-bs-target="@(" #delete-" + item.SectorId)" data-url="@Url.Action($" Delete/{item.SectorId}")"
                                aria-controls="DataTables_Table_0"
                                id="confirm-text">
                                <i class="bx bx-trash me-1"></i>
                                حذف
                                </button>
                                @await Html.PartialAsync("Delete", item)


                                </div>

                                </td>*@
                                </tr>
                            }


                        </tbody>

                    </table>
                </div>
            </div>
            <!--/ Scrollable -->
            <!--/ Basic Pagination -->


            <div class="demo-inline-spacing">
                <nav id="page" aria-label="Page navigation" class="mt-5 me-4">
                    <ul class="pagination pagination-sm justify-content-end ">
                        <li class="page-item prev mr">
                            <a class="page-link" href="javascript:void(0);">
                                <i class="tf-icon bx bx-chevrons-left"></i>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="javascript:void(0);">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0);">2</a>
                        </li>
                        <li class="page-item ">
                            <a class="page-link" href="javascript:void(0);">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0);">4</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="javascript:void(0);">5</a>
                        </li>
                        <li class="page-item next">
                            <a class="page-link" href="javascript:void(0);">
                                <i class="tf-icon bx bx-chevrons-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
        </div>
    </div>
</div>

<!-- Offcanvas to add AItemGroup -->
@await Html.PartialAsync("_AddOrEditPartialView", new ItemGroup())

@section Scripts{

    <partial name="_ValidationScriptsPartial" />

    }