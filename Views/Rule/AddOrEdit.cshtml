<!-- Offcanvas to add client-->
 

<div class="offcanvas offcanvas-end show" id="add-new-record" style="visibility: visible;" aria-modal="true" role="dialog">
    <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="exampleModalLabel">   إضافة صلاحية    </h5>
        <a asp-action="Index"> <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button></a>
    </div>
    <div class="offcanvas-body flex-grow-1">

        <form asp-action="Index" class="add-new-record row g-2 pt-0 fv-plugins-bootstrap5 fv-plugins-framework" id="form-add-new-record" onsubmit="return false" novalidate="novalidate">




            <div class="col-sm-12">
                <label class="form-label"> رقم الصلاحية </label>
                <div class="input-group input-group-merge">
                    <input type="number" id="VNumber" name="VNumber" class="form-control" placeholder="1" readonly />
                </div>
            </div>


            <div class="mb-3">
                <label class="form-label">اسم الصلاحية</label>
                <input type="text"
                       required
                       class="form-control dt-full-name"
                       placeholder="اسم الصلاحية" />
                <span class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">حالة الحساب</label>
                <select required
                        class="form-control dt-full-name"
                        placeholder="حالة الحساب">
                    <option value=NULL> يرجى اختيار حالة مجموعة الصلاحيات </option>
                    <option value="True"> نشط </option>
                    <option value="False"> غير نشط </option>
                </select>

            </div>

            <div class="d-grid gap-2 col-13 mx-auto mt-4">
                <button type="submit" class="btn btn-primary " id="type-success" name="submitButton">حفظ</button>
                <button class="btn btn-label-secondary " type="reset" data-bs-dismiss="offcanvas"> إلغاء</button>
            </div>
        </form>
    </div>
